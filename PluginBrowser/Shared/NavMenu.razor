@code {

    record NavItemData(string Href, string Text);

    private static List<NavItemData> NavItems = new List<NavItemData>
    {
        new NavItemData("plugins", "Plugins"),
        new NavItemData("settings", "Settings"),
    };

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}